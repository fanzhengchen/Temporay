<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_dlg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:background="@color/trans_half"
    >
    <RelativeLayout
        android:id="@id/relative_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/global_margin_left"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/image_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/pay_type_select"
                android:padding="@dimen/global_margin_left"
                android:textSize="@dimen/txt_size_3"
                />
            <RelativeLayout
                android:id="@+id/relative_dingdang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_margin_left"
                android:clickable="true"
                android:focusable="true"
                >
                <RadioButton
                    android:id="@+id/radio_dingdang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:clickable="false"
                    />
                <ImageView
                    android:id="@+id/image_dingdang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/radio_dingdang"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/global_margin_left"
                    android:src="@mipmap/ic_launcher"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_dingdang"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/global_margin_left"
                    android:text="@string/pay_balance"
                    android:textSize="@dimen/txt_size_4"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"
                />
            <RelativeLayout
                android:id="@+id/relative_alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_margin_left"
                android:clickable="true"
                android:focusable="true"
                >
                <RadioButton
                    android:id="@+id/radio_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:clickable="false"
                    />
                <ImageView
                    android:id="@+id/image_alipay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/radio_alipay"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/global_margin_left"
                    android:src="@mipmap/pay_alipay"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_alipay"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/global_margin_left"
                    android:text="@string/ali_pay"
                    android:textSize="@dimen/txt_size_4"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"
                />
            <RelativeLayout
                android:id="@+id/relative_wchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_margin_left"
                android:clickable="true"
                android:focusable="true"
                >
                <RadioButton
                    android:id="@+id/radio_wchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:clickable="false"
                    />
                <ImageView
                    android:id="@+id/image_wchat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/radio_wchat"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/global_margin_left"
                    android:src="@mipmap/pay_we_chat"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_wchat"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/global_margin_left"
                    android:text="@string/wchat_pay"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"
                />

            <TextView
                android:id="@id/text_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/light_blue"
                android:padding="@dimen/global_margin_left"
                android:text="@string/pay_confirm"
                android:textSize="@dimen/txt_size_2"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>