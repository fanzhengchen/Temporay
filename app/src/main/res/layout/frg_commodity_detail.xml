<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                >
                <ImageView
                    android:id="@+id/image_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/stub_avatar"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:id="@+id/relative_group"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/global_margin_left"
                    android:background="@color/black"
                    android:alpha="0.7"
                    android:padding="@dimen/global_margin_left"
                    >
                    <TextView
                        android:id="@+id/text_delegation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="团长:XXX"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/text_group_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="拼团进度:1/3"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/text_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文艺森女小清新短裤"
                android:layout_marginLeft="@dimen/global_margin_left"
                android:layout_marginTop="@dimen/global_margin_left"
                />
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_margin_left"
                android:text="这里可以放上对商品的一些文字描述，夸赞等等，一般来说用灰色文字，减少视觉中心漂移，两行三行就够了"
                android:textSize="@dimen/txt_size_4"
                />
            
            <ImageView
                android:id="@+id/image_progress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/stub_avatar_big"
                android:padding="@dimen/global_margin_left"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_margin_left"
                android:paddingLeft="@dimen/global_margin_left"
                android:paddingRight="@dimen/global_margin_left"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/text_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="快递:免运费"
                    android:textSize="@dimen/txt_size_4"
                    />
                <TextView
                    android:id="@+id/text_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_fare"
                    android:layout_toLeftOf="@+id/text_time"
                    android:gravity="center_horizontal"
                    android:text="销量:1234笔"
                    android:textSize="@dimen/txt_size_4"
                    />
                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="剩余1天2小时34分钟"
                    android:textSize="@dimen/txt_size_4"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="@color/line_color"
                />
            <RelativeLayout
                android:id="@+id/relative_specification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/global_margin_left"
                >
                <TextView
                    android:id="@+id/specification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品 规格"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/text_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/specification_text"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="@dimen/txt_size_3"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/list_goto_btn"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="@color/line_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/global_margin_left"
                android:layout_marginTop="@dimen/global_margin_left"
                />
            <ImageView
                android:id="@+id/image_detail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@mipmap/stub_avatar"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/global_margin_left"
        >
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left"
            />
        <ImageView
            android:id="@+id/image_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/fenxiang"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:id="@+id/relative_phone_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/warning"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="客服"
                    android:textSize="@dimen/txt_size_4"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/text_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dark_green"
            android:text="¥19.80 任性购买"
            android:gravity="center"
            android:textSize="@dimen/txt_size_3"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/text_group_join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_blue"
            android:text="¥9.80 参团"
            android:gravity="center"
            android:textSize="@dimen/txt_size_3"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>