<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_color"
    android:orientation="vertical">

    <EditText
        android:id="@+id/frg_return_goods_illustration"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="@string/input_reason_returning_goods"
        android:padding="5dp"
        android:textSize="@dimen/txt_size_3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/frg_return_goods_img_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>