<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:id="@+id/frg_my_info_portrait_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/portrait"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/frg_my_info_portrait"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/stub_avatar"
                app:riv_corner_radius="3dp" />

        </LinearLayout>

        <include layout="@layout/under_line" />

        <LinearLayout
            android:id="@+id/frg_my_info_nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/username_nickname"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <EditText
                android:id="@+id/frg_my_info_nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center_vertical"
                android:text="sadf"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

        </LinearLayout>

        <include layout="@layout/under_line" />

        <LinearLayout
            android:id="@+id/frg_my_info_gender_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/gender"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <TextView
                android:id="@+id/frg_my_info_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:text="@string/male"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

        </LinearLayout>

        <include layout="@layout/under_line" />

        <LinearLayout
            android:id="@+id/frg_my_info_birth_date_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/birth_date"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <TextView
                android:id="@+id/frg_my_info_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:text="1987-8-5"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

        </LinearLayout>

        <include layout="@layout/under_line" />

        <LinearLayout
            android:id="@+id/frg_my_info_city_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/city"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <EditText
                android:id="@+id/frg_my_info_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center_vertical"
                android:text="sadf"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>