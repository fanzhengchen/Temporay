<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_divider_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/cell_my_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2015-10-25"
            android:textColor="@color/txt_lvl_2"
            android:textSize="@dimen/txt_size_3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/merchant_name"
            android:textColor="@color/txt_lvl_3"
            android:textSize="@dimen/txt_size_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/return_goods"
            android:textColor="@color/txt_lvl_3"
            android:textSize="@dimen/txt_size_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/list_divider_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cell_my_order_goods_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/stub_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/goods_name"
                    android:textColor="@color/txt_lvl_2"
                    android:textSize="@dimen/txt_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RMB"
                    android:textColor="@color/txt_lvl_3"
                    android:textSize="@dimen/txt_size_3" />

                <TextView
                    android:id="@+id/cell_my_order_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/txt_lvl_3"
                    android:textSize="@dimen/txt_size_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/specification_type"
                    android:textColor="@color/txt_lvl_3"
                    android:textSize="@dimen/txt_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="@color/txt_lvl_3"
                    android:textSize="@dimen/txt_size_3" />

                <TextView
                    android:id="@+id/cell_my_order_goods_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/txt_lvl_3"
                    android:textSize="@dimen/txt_size_3" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/freight"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RMB"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <TextView
                android:id="@+id/cell_my_order_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total"
                android:textColor="@color/txt_lvl_3"
                android:textSize="@dimen/txt_size_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RMB"
                android:textColor="@color/main_pink"
                android:textSize="@dimen/txt_size_3" />

            <TextView
                android:id="@+id/cell_my_order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/main_pink"
                android:textSize="@dimen/txt_size_3" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.hcb.jingle.widget.RCTextView
            android:id="@+id/cell_my_order_btn1"
            android:layout_width="@dimen/btn_order_detail_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/look_up_order"
            android:textColor="@color/txt_lvl_3"
            app:cornerWidth="3dp"
            app:strokeColor="@color/unhighlight"
            app:strokeWidth="1dp" />

        <com.hcb.jingle.widget.RCTextView
            android:id="@+id/cell_my_order_btn2"
            android:layout_width="@dimen/btn_order_detail_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/look_up_order"
            android:textColor="@color/txt_lvl_3"
            app:cornerWidth="3dp"
            app:strokeColor="@color/unhighlight"
            app:strokeWidth="1dp" />

        <com.hcb.jingle.widget.RCTextView
            android:id="@+id/cell_my_order_look_up_order"
            android:layout_width="@dimen/btn_order_detail_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/look_up_order"
            android:textColor="@color/txt_lvl_3"
            app:cornerWidth="3dp"
            app:strokeColor="@color/unhighlight"
            app:strokeWidth="1dp" />


    </LinearLayout>


</LinearLayout>