<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="64dp"
                android:layout_height="@dimen/tab_bottom_h"
                android:layout_weight="1"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tab_label"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:duplicateParentState="true"
        android:textColor="@drawable/txt_main_tab"
        android:textSize="@dimen/txt_size_5"/>

    <TextView
        android:id="@+id/chat_unread"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignTop="@+id/tab_image"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/tab_image"
        android:background="@drawable/unread_bg_main"
        android:focusable="false"
        android:gravity="center"
        android:minWidth="14dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_5"
        android:visibility="gone"/>

</RelativeLayout>