<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_h"
    android:background="@color/main_bg">

    <TextView
        android:id="@+id/navi_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/main_pink"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/navi_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:paddingRight="20dp"
        android:scaleType="center"
        android:src="@mipmap/arrow_left" />

    <TextView
        android:id="@+id/navi_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/navi_left"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/cancel"
        android:textColor="@color/main_pink"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/navi_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="left|center_vertical"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/navi_right_img"
        android:layout_width="48dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:visibility="gone" />

</RelativeLayout>